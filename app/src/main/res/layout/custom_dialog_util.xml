<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/textview_tittle_dialog_util"
            android:background="@drawable/shape_button_menu_green"
            android:padding="6dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Atenção"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/textview_corpo_mensagem"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensagem aqui"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/textview_tittle_dialog_util"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:layout_below="@+id/textview_corpo_mensagem">

            <Button
                android:id="@+id/button_sim"
                android:textColor="@android:color/holo_green_light"
                android:textStyle="italic"
                android:background="@drawable/shape_button_menu_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Sim" />

            <Button
                android:id="@+id/button_nao"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:background="@drawable/shape_button_menu_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Não" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>