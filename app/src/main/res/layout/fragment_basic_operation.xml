<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonSair"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_sair"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_oval"
                android:gravity="center">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvPerdeuTempo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="00"
                    android:textColor="@color/colorError"
                    android:textSize="30dp" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/timerToEnd"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:gravity="center"

                    android:textColor="@android:color/white"
                    android:textSize="30dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvGanhouTempo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="00"
                    android:textColor="@color/colorNotError"
                    android:textSize="30dp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Pergunta:"
                android:textColor="@color/colorAccent"
                android:textSize="30dp"
                android:textStyle="italic"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/number1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:padding="16dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/text_op"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="+"
                    android:textColor="@color/colorAccent"
                    android:textSize="60dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:padding="16dp"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="30dp" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <RadioGroup
                    android:orientation="vertical"
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/radioButtonA"
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                    </RadioButton>


                    <RadioButton
                        android:text=""
                        android:id="@+id/radioButtonB"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                    </RadioButton>

                    <RadioButton
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:id="@+id/radioButtonC"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                    </RadioButton>

                    <RadioButton
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:id="@+id/radioButtonD"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                    </RadioButton>

                    <RadioButton
                        android:text=""
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:id="@+id/radioButtonE"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content">
                    </RadioButton>

                </RadioGroup>


            </LinearLayout>

            <Button
                android:id="@+id/btnAnswer"
                android:background="@drawable/shape_button_menu"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textSize="25dp"
                android:text="PRONTO !?"
                android:textColor="#fff"/>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>